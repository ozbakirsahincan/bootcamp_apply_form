@model Candidate
<div class="display-5">
    <h1>Apply</h1>
</div>

<form method="post" action="/course/apply">
    <div class="form-group my-2">
        <label asp-for="Email">E-Mail</label>
        <input asp-for="Email" id="email" type="text" class="form-control"/>
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" id="firstName" type="text" class="form-control"/>
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" id="lastName" type="text" class="form-control"/>
    </div>

    <div class="form-group my-2">
        <label asp-for="Age">Age</label>
        <select asp-for="Age" id="age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course </legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="Asp.Net Core MVC"/>
            <label for="mvc">Asp.Net Core MVC</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="Asp.Net Core MVC"/>
            <label for="api">Asp.Net Core Api</label>
        </p>
        <p>
            <input id="blazor" type="radio" asp-for="SelectedCourse" value="Asp.Net Core MVC"/>
            <label for="blazor">Blazor</label>
        </p>
    </fieldset>

    <div>
        <button type="submit" class="btn btn-primary">Apply</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-warning" >Home</a>
    </div>

</form>