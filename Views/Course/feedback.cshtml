@model Candidate

<div>
    <h3 class="display-4">Congratulations @Model.Fullname</h3>
    <p class="lead">Your Application has been <mark>taken.</mark> </p>
    <p class="lead">Thanx for your application and interest</p>
    <hr/>
    <blockquote class="blockquote">
        You have enrolled to @Model.SelectedCourse course
    </blockquote>
    
    <p class="tex-muted">You applied at @Model.ApplyAt </p>
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-outline-success">Applications</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Applications</a>
    </div>
</div>